<UserControl x:Class="ViewUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllAboutTeethDCMS"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:ViewUsersViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
            <RadioButton IsChecked="True" Content="Grid View" Style="{StaticResource RadioButtonStyle1}" local:CustomProperties.Image="{StaticResource GridView}"/>
            <RadioButton Content="List View" Style="{StaticResource RadioButtonStyle1}" local:CustomProperties.Image="{StaticResource ListView}"/>
        </StackPanel>
        <WrapPanel x:Name="container" Grid.Row="1"/>
    </Grid>
</UserControl>
